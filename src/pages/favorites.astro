---
import Layout from "@layouts/Layout.astro";
import { getChannels } from "@utils/channelScraper";
import {
    SignedIn,
    SignedOut,
    UserButton,
    SignInButton,
} from "@clerk/astro/components";

// Get all channels
const channels = await getChannels();
---

<Layout title="Your Favorites | Acestream Directory">
    <div class="py-8 px-4 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold text-white mb-6">
            Your Favorite Channels
        </h1>
        <SignedIn>
            <div id="favorites-container">
                <!-- Initial loading state -->
                <div id="loading-favorites" class="py-8 text-center">
                    <div
                        class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-red-600 mx-auto"
                    >
                    </div>
                    <p class="mt-4 text-zinc-300">Loading your favorites...</p>
                </div>

                <!-- Empty state -->
                <div id="empty-favorites" class="hidden py-12 text-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="mx-auto h-12 w-12 text-zinc-500"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                        ></path>
                    </svg>
                    <h3 class="mt-2 text-lg font-medium text-white">
                        No favorites yet
                    </h3>
                    <p class="mt-1 text-zinc-500">
                        Start by adding channels to your favorites list from the
                        channels directory.
                    </p>
                    <div class="mt-6">
                        <a
                            href="/channels"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                        >
                            Browse Channels
                        </a>
                    </div>
                </div>

                <!-- Favorites grid -->
                <div
                    id="favorites-grid"
                    class="hidden grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
                >
                </div>

                <!-- Error state -->
                <div id="error-favorites" class="hidden py-12 text-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="mx-auto h-12 w-12 text-red-500"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        aria-hidden="true"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                        ></path>
                    </svg>
                    <h3 class="mt-2 text-lg font-medium text-white">
                        Error loading favorites
                    </h3>
                    <p class="mt-1 text-zinc-500">
                        There was a problem loading your favorite channels.
                        Please refresh and try again.
                    </p>
                    <div class="mt-6">
                        <button
                            id="retry-button"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                        >
                            Retry
                        </button>
                    </div>
                </div>
            </div>
        </SignedIn>

        <SignedOut>
            <div
                class="bg-zinc-900 border border-zinc-800 rounded-lg p-8 text-center"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="mx-auto h-12 w-12 text-zinc-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    aria-hidden="true"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                    ></path>
                </svg>
                <h2 class="mt-4 text-xl font-medium text-white">
                    Please sign in to view your favorites
                </h2>
                <p class="mt-2 text-zinc-400">
                    You need to be logged in to save and view your favorite
                    channels.
                </p>
                <div class="mt-6">
                    <SignInButton />
                </div>
            </div>
        </SignedOut>
    </div>
</Layout>
