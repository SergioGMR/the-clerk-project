---
import "@styles/global.css";
import Nav from "@components/Nav.astro";
const {
  title = "The Clerk Project",
  description = "The Clerk Project is an open-source initiative aimed at providing a comprehensive solution for identity management and authentication in modern web applications.",
} = Astro.props;
---

<html lang="en">
  <head>
    <!-- Metadatos esenciales -->
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- SEO mejorado -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph / compartir en redes sociales -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL("/og-image.webp", Astro.url)} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- OptimizaciÃ³n de rendimiento -->
    <meta name="theme-color" content="#0a0a0a" />

    <!-- Favicon y Apple touch icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.webp" />
  </head>

  <body class="min-h-screen bg-neutral-950 text-white font-sans antialiased">
    <Nav />
    <main class="container mx-auto px-4 py-8 max-w-7xl">
      <slot />
    </main>
  </body>
</html>
